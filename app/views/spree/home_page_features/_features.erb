<div class="flexslider">
  <ul class="slides">
    <% Spree::HomePageFeature.published.each do |feature| %>
      <li class="feature <%= feature.style? ? feature.style : "" %>">
        <div class="hero padded vertical-margin">
          <h4><%= feature.title %></h4>
          <div><%= feature.body %></div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
